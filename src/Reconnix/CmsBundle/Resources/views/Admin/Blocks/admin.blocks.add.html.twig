<!DOCTYPE html>
<html>
    <head>
    	{{tinymce_init()}}
        <meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
        <title>{% block title %}Reconnix{% endblock %} - Reconnix</title>

        <link href="{{  asset('css/adminMain.css') }}" rel="stylesheet" media="all" />
  		<script src="//code.jquery.com/jquery-1.9.1.js"></script>
  		<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  		<link rel="stylesheet" href="/resources/demos/style.css">
  		<script>
  		$(function() {
    		$( "#tabs" ).tabs();
  		});
  		</script>
    </head>
     <body>
     	<div id="admin-nav">
    		<div id="admin-nav-logo">
    			<a class="admin-nav" href="{{ path('reconnix_main_admin_index') }}">
    				<img src="{{ asset('images/admin-logo.png')}}" />
    			</a>
    		</div>
    		<div id="admin-nav-links">
    			<a class="admin-nav" href="{{ path('reconnix_main_admin_index') }}">Admin Home</a>
    			<a class="admin-nav" href="{{ path('reconnix_main_index', {"name":"home"}) }}">Visit Site</a>
    		</div>
   		</div>


	<div id="tabs">
		<ul>
			<li><a href="#tabs-1">General</a></li>
			<li><a href="#tabs-2">Meta</a></li>
		</ul>
		{{form_start(form)}}
			<div id="tabs-1">
			
				<table class="form-table">
					<tr>
						<td>
							{{form_label(form.name)}}
							{{form_errors(form.name)}}
						</td>
						<td>{{form_widget(form.name)}}</td>
					</tr>
	
					<tr>
						<td>
							{{form_label(form.content)}}
							{{form_errors(form.content)}}
						</td>
						<td>{{form_widget(form.content)}}</td>
					</tr>
	
					<tr>
						<td>
							{{form_label(form.region)}}
							{{form_errors(form.region)}}
						</td>
						<td>{{form_widget(form.region)}}</td>
					</tr>
				</table>
			</div>
			<div id="tabs-2">
				<table class="form-table">
					<tr>
						<td>
							{{form_label(form.background)}}
							{{form_errors(form.background)}}
						</td>
						<td>{{form_widget(form.background)}}</td>
					</tr>
					<tr>
						<td>
							{{form_label(form.classList)}}
							{{form_errors(form.classList)}}
						</td>
						<td>{{form_widget(form.classList)}}</td>
					</tr>
				</table>
				
			</div>
		{{form_end(form)}}
	</div>

	</body>
</html>