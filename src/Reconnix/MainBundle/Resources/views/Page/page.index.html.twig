{% extends '::base.html.twig' %} 

{% block title %}
	{{ title }}
{% endblock %}

{% block header %}
	{% for block in blocks if block.name == 'Header' %}
		{{ block.content | raw }}
	{% endfor %}
{% endblock %}

{% block tagline %}
	{{ tagline }}
{% endblock %}

{% block subtagline %}
	{{ subtagline }}
{% endblock %}

{% block body %}
	{% if name == 'newsroom' %}
		{{ include('ReconnixMainBundle::newsroom.html.twig') }}
	{% else %}
		{{ body | raw }}
	{% endif %}
{% endblock %}	

{% block social %}
	{% for block in blocks if block.name == 'Social' %}
		{{ block.content | raw }}
	{% endfor %}
{% endblock %}

{% block footer %}
	{% for block in blocks if block.name == 'Footer' %}
		{{ block.content | raw }}
	{% endfor %}
{% endblock %}

